{
    "name": "lamd",
    "version": "3.1.0",
    "description": "Command line utility to monitor accounts for new replays and automatically downloads them.",
    "homepage": "https://github.com/thecoder75/lamd",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/thecoder75/lamd"
    },
    "scripts": {
        "start": "NODE_ENV='development' && ./node_modules/.bin/electron ./index.js --enable-logging",
        "release": "build -w && build -l && build -m",
        "release-win": "build -w",
        "release-linux": "build -l",
        "release-mac": "build -m"
    },
    "author": "TheCoder75",
    "license": "AGPLv3",
    "dependencies": {
        "async": "^2.6.1",
        "concat-files": "^0.1.1",
        "fs": "0.0.1-security",
        "path": "^0.12.7",
        "platform": "^1.3.5",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5"
    },
    "devDependencies": {
        "electron": "^3.1.2"
    },
    "build": {
        "appId": "com.thecoderstoolbox.lamd",
        "directories": {
            "output": "./dist"
        },
        "productName": "LAMD",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "asar": true,
        "linux": {
            "icon": "build/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Network",
            "description": "Browse, search and manage accounts, replays and more without the need of an actual account on Live.me.",
            "maintainer": "thecoder1975@gmail.com"
        },
        "appImage": {
            "category": "Network"
        },
        "win": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true
        },
        "mac": {
            "category": "public.app-category.video",
            "target": [
                "zip"
            ],
            "identity": null,
            "icon": "build/icon.png"
        }
    }
}
